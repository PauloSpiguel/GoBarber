{% extends "_layouts/default.njk"%}

{% block body %}
  <div class="content" style="max-width: 80%;">
    <strong>SERVIÃ‡OS AGENDADOS PARA HOJE</strong>
    <strong style="margin: 0px">{{ today }}</strong>
    <p>{{ week }}</p>
    <div class="provider">
      <div>
        <img src="/files/{{ user.avatar }}" />
        <strong>{{ user.name }}</strong>
      </div>
    </div>
    {# {% if appointments.user_id === true %} #}
      {% if appointments %}
      <table class="table">
              <thead>
                <tr>
                  <th>Agendamento</th>
                  <th>Nome do Cliente</th>
                  <th>Email</th>
                  <th>Foto Perfil</th>
                </tr>
              </thead>
              <tbody>
              {% for appointments in appointments|sort(false, true, 'time') %}
                <tr>
                  <td><strong>{{ appointments.date}}</strong></td>
                  <td><strong>{{ appointments.user.name }}</strong></td>
                  <td><strong>{{ appointments.user.email }}</strong></td>
                  <td>
                      <div class="profile">
                        <img src="/files/{{ appointments.user.avatar }}" />
                      </div>
                  </td>
                </tr>
              {% endfor %}
              </tbody>
            </table>
      {% else %}
              <strong>Sem agendamento para hoje</strong>
      {% endif %}
  <a class="logout" href="/app/logout">Sair</a>
  </div>
{% endblock %}
